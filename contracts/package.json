{
  "name": "swiftsplit-contracts",
  "version": "1.0.0",
  "description": "SwiftSplit - Cross-border freelance payments on Arc blockchain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network arcTestnet",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network arcMainnet",
    "verify": "hardhat run scripts/verify.js --network arcTestnet",
    "verify:mainnet": "hardhat run scripts/verify.js --network arcMainnet",
    "interact": "hardhat run scripts/interact.js --network arcTestnet",
    "sample-data": "hardhat run scripts/create-sample-data.js --network arcTestnet",
    "monitor": "hardhat run scripts/monitor.js --network arcTestnet",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "arc",
    "usdc",
    "payments",
    "freelance",
    "blockchain",
    "defi",
    "ai",
    "cross-border"
  ],
  "author": "SwiftSplit Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.3.1"
  }
}