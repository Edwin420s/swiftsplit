# Updated .env with all required variables
# Server
PORT=5000
NODE_ENV=development
JWT_SECRET=your_super_secret_jwt_key_here
FRONTEND_URL=http://localhost:3000

# Databases
PG_HOST=localhost
PG_DATABASE=swiftsplit
PG_USER=postgres
PG_PASSWORD=your_postgres_password
MONGODB_URI=mongodb://localhost:27017/swiftsplit

# Arc Blockchain
ARC_RPC_URL=https://arc-testnet.example.com
PRIVATE_KEY=your_arc_wallet_private_key
PAYMENT_CONTRACT_ADDRESS=0xYourDeployedContractAddress
USDC_CONTRACT_ADDRESS=0xUSDCContractOnArc

# Circle Wallet
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_API_SECRET=your_circle_api_secret
USDC_TOKEN_ID=your_usdc_token_id

# AI Services
OPENAI_API_KEY=your_openai_key
ELEVENLABS_API_KEY=your_elevenlabs_key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads