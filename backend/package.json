{
  "name": "swiftsplit-backend",
  "version": "1.0.0",
  "description": "Backend for SwiftSplit - Cross-border freelance payments platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "node -e \"console.log('No backend build step required')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t swiftsplit-backend .",
    "docker:run": "docker run -p 5000:5000 swiftsplit-backend"
  },
  "dependencies": {
    "@sentry/node": "^5.30.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.0",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.0",
    "mongoose": "^7.0.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.0",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.0",
    "supertest": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "blockchain",
    "payments",
    "usdc",
    "arc",
    "freelance",
    "cross-border"
  ],
  "author": "SwiftSplit Team",
  "license": "MIT"
}
