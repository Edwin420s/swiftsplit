# SwiftSplit Backend Environment Configuration

# Server
PORT=5000
NODE_ENV=development
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:5000/api

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/swiftsplit
MONGODB_DATABASE=swiftsplit

# Arc Blockchain
ARC_RPC_URL=https://sepolia.arc.gateway.fm
ARC_MAINNET_RPC_URL=https://arc-mainnet.gateway.fm
ARC_CHAIN_ID=23011913
PRIVATE_KEY=0xyour_private_key_here
MAINNET_PRIVATE_KEY=0xyour_mainnet_private_key

# Smart Contracts
SWIFTSPLIT_CONTRACT_ADDRESS=0xYourSwiftSplitContractAddress
USDC_CONTRACT_ADDRESS=0xYourUSDCContractAddress

# Circle Wallet
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_API_SECRET=your_circle_api_secret
CIRCLE_BASE_URL=https://api.circle.com/v1/w3s
CIRCLE_ENTITY_SECRET=your_circle_entity_secret
USDC_TOKEN_ID=your_usdc_token_id

# AI Services
AI_MODULES_URL=http://localhost:3001
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
ELEVENLABS_API_KEY=your_elevenlabs_api_key
AIML_API_KEY=your_aiml_api_key
AIML_API_URL=https://api.aimlapi.com

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=SwiftSplit <noreply@swiftsplit.com>

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security
CORS_ORIGIN=http://localhost:5173
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Third-Party APIs (Optional)
ARCSCAN_API_KEY=
COINMARKETCAP_API_KEY=

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SOCKET_IO=true
ENABLE_AI_PARSING=true
ENABLE_VOICE_COMMANDS=true
ENABLE_TEAM_PAYMENTS=true
ENABLE_INVOICE_PARSING=true
ENABLE_CHAT_PARSING=true