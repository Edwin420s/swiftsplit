# =============================================
# SwiftSplit Backend Environment Configuration
# Cross-Border Freelance Payments Simplifier
# AI Agents on Arc with USDC Hackathon
# =============================================

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:5000/api

# =============================================
# Database Configuration (MongoDB Only)
# =============================================
# MongoDB stores ALL application data:
# - Users, Wallets, Teams
# - Payments, Invoices, Transactions
# - AI Logs, Parsed Data, Chat Messages
# - Audit Logs, Analytics
# =============================================

MONGODB_URI=mongodb://localhost:27017/swiftsplit
MONGODB_DATABASE=swiftsplit

# For MongoDB Atlas (Production - Cloud):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/swiftsplit?retryWrites=true&w=majority

# Arc Blockchain Configuration (EVM-compatible Layer-1)
# Arc Testnet for hackathon development
ARC_RPC_URL=https://sepolia.arc.gateway.fm
ARC_MAINNET_RPC_URL=https://arc-mainnet.gateway.fm
PRIVATE_KEY=0xyour_arc_wallet_private_key_here_never_commit_this
MAINNET_PRIVATE_KEY=0xyour_mainnet_private_key_for_production
# Network Chain ID
ARC_CHAIN_ID=23011913

# Contract Addresses (Arc Testnet)
SWIFTSPLIT_CONTRACT_ADDRESS=0xYourDeployedSwiftSplitContractAddress
USDC_CONTRACT_ADDRESS=0xYourUSDCContractAddressOnArc
# For mainnet, update these after contract deployment

# Circle Wallet Configuration (Account Abstraction & Onboarding)
CIRCLE_API_KEY=your_circle_api_key_from_developer_portal
CIRCLE_API_SECRET=your_circle_api_secret_from_developer_portal
CIRCLE_BASE_URL=https://api.circle.com/v1/w3s
USDC_TOKEN_ID=your_usdc_token_id_from_circle
# Circle Entity Secret (for programmable wallets)
CIRCLE_ENTITY_SECRET=your_circle_entity_secret

# AI Services Configuration (Invoice/Chat/Voice Parsing)
AI_MODULES_URL=http://localhost:3001
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
# AI/ML API Configuration (Hackathon Partner)
AIML_API_KEY=your_aiml_api_key_here
AIML_API_URL=https://api.aimlapi.com

# Email Service Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=SwiftSplit <noreply@swiftsplit.com>
SMTP_SECURE=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_session_secret_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Third-Party API Keys
ARCSCAN_API_KEY=your_arcscan_api_key_for_contract_verification
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_for_gas_reporter

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SOCKET_IO=true
ENABLE_AI_PARSING=true
ENABLE_VOICE_COMMANDS=true
ENABLE_TEAM_PAYMENTS=true
ENABLE_INVOICE_PARSING=true
ENABLE_CHAT_PARSING=true

# =============================================
# Production Overrides (uncomment for production)
# =============================================
# NODE_ENV=production
# MONGODB_URI=your-production-mongodb-uri
# CORS_ORIGIN=https://your-frontend-domain.com
# JWT_SECRET=your-very-long-and-secure-production-secret
# PRIVATE_KEY=your-production-arc-wallet-private-key